{
    "app-id" : "com.github.tenderowl.norka",
    "runtime" : "org.gnome.Platform",
    "sdk" : "org.gnome.Sdk",
    "runtime-version" : "47",
    "command" : "norka",
    "finish-args" : [
        "--filesystem=xdg-documents",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--share=network",
        "--socket=cups"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "gtksourceview",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gtksourceview.git",
                    "tag" : "5.14.0"
                }
            ]
        },
        {
            "name" : "gspell",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/otrocodigo/gspell.git",
                    "tag" : "1.11.1"
                }
            ]
        },
        "python3-markdown2.json",
        "python3-requests.json",
        "python3-htmldocx.json",
        {
            "name" : "norka",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/TenderOwl/Norka.git"
                }
            ]
        }
    ],
    "build-options" : {
        "env" : {        }
    }
}
