[Desktop Entry]
Name=Norka
GenericName=Text Editor
Comment=Continuous text editor with autosaving
Exec=@project_name@ %u
Icon=@icon@
Terminal=false
Type=Application
Categories=TextEditor;GTK;
Keywords=text;editor;markdown;notes;pdf;word;html;writer;
MimeType=text/markdown;text/x-markdown;text/plain;
StartupNotify=true
Actions=NewNote;

[Desktop Action NewNote]
Name=New Note
Exec=@project_name@ --new="New Note"

